@model FFF.ViewModels.PaymentMethod.PaymentMethodInput

@using ( Html.BeginForm( "CreateCallback", "PaymentMethod", FormMethod.Post, new { id="ModalForm", @for="#ModalContent" } ) )
{
	@Html.AntiForgeryToken()
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>
			Creating New Payment Method
		</h3>
	</div>
	<div class="modal-body">
		@Html.ValidationSummary( true )
		<span class="help-inline field-validation-error">
		</span>
		@Html.EditorForModel("PaymentMethod")
	</div>
	<div class="modal-footer">
		<a href="#" class="btn btn" data-dismiss="modal">Cancel</a>
		<button class="btn btn-primary" type="submit" name="AddressSelectionType" value="Select">
			Submit
			<span class="glyphicon glyphicon-arrow-right"></span>
		</button>
	</div>
}