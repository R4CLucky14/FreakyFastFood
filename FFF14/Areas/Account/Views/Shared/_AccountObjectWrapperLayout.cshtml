<div class="subcontainer" id="@ViewBag.Controller">
	<div class="row">
		<div class="col-xs-6">
			<h2>
				<span class="glyphicon glyphicon-@ViewBag.Glyphicon">
				</span>				
				@ViewBag.SubTitle
			</h2>
		</div>
		@if(ViewBag.CreateButton)
		{
			<div class="col-sm-6">
				<h2>
					@using ( Html.BeginForm( "Create", ViewBag.Controller as String, FormMethod.Post, new { @class="LoadModal" } ) )
					{
						@Html.AntiForgeryToken()
						<button class="btn btn-success pull-right" type="submit">
							<span class="glyphicon glyphicon-plus-sign">
							</span>
							@ViewBag.CreateButtonMessage
						</button>
					}
				</h2>
			</div>
		}
	</div>
	@using ( Html.BeginForm( "Index", ViewBag.Controller as String, FormMethod.Post, new { @class="refresher", @for="#" + ViewBag.Controller + "Content" } ) )
	{
		@Html.AntiForgeryToken()
	}
	<div class="subcontent" id="@(ViewBag.Controller)Content">
		<img src="@Url.Content("~/Content/Images/ajax-loader.gif")" width="50px" height="50px" />
	</div>
</div>