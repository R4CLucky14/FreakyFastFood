@model FFF.ViewModels.Profile.PhoneInput

@using ( Html.BeginForm( "CreatePhoneConfirmed", "Profile", FormMethod.Post, new { id="ModalForm", @for="#ContactContent" } ) )
{
	@Html.AntiForgeryToken()
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>
			Creating New Phone
		</h3>
	</div>
	<div class="modal-body">
		@Html.ValidationSummary( true )
		<span class="help-inline field-validation-error">
		</span>
		@Html.EditorForModel("Phone")
	</div>
	<div class="modal-footer">
		<a href="#" class="btn btn" data-dismiss="modal">Cancel</a>
		<button class="btn btn-primary" type="submit">
			Submit
			<span class="glyphicon glyphicon-arrow-right"></span>
		</button>
	</div>
}