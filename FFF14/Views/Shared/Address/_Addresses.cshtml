@model IEnumerable<FFF.Models.LocationSystem.Address>

<div class="row panel panel-primary">
	@if ( Model.Count() == 0 )
	{
		<div class="well well-lg">
			<p class="text-center"><strong>You have no Addresses.</strong> If you add an Address, you can view, edit, and delete it here.</p>
		</div>
	}
	else
	{
			foreach ( var address in Model )
			{
				<div class="well well-md col-xs-12 col-sm-4">
					@{ Html.RenderPartial( "_Address", address ); }
				</div>
			}
	}
</div>