@model IEnumerable<FFF.Models.ReviewSystem.Review>

<div class="row panel panel-primary">
	@if ( Model.Count() == 0 )
	{
		<div class="well well-lg">
			<p class="text-center"><strong>You have no Reviews.</strong> If you add a Reviews, you can view, edit, and delete it here.</p>
		</div>
	}
	else
	{
		foreach ( var review in Model )
		{
			<div class="well well-sm col-sm-3" id="Display-@review.RID">
				@{ Html.RenderPartial( ViewBag.Path as String + "_Review.cshtml", review ); }
			</div>
		}
	}
</div>