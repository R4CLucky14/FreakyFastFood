<script type="text/html" id="AddressDelete">
	<form data-bind="submit: Account.Addresses.delete">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h3>Deleting<span data-bind="text: nick"></span> Address</h3>
		</div>
		<div class="modal-body">
			<span class="help-inline field-validation-error">
			</span>
			<p>Are you sure you wish to delete this Address?</p>
			<div class="well">
				<div data-bind ="template: Addresses.displayMode">

				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Cancel</a>
			<button type="submit" class="btn btn-danger">
				<span class="glyphicon glyphicon-remove">
				</span>
				Delete
			</button>
		</div>
	</form>
</script>