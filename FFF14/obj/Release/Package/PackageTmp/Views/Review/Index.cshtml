@model IEnumerable<FFF.Models.ReviewSystem.Review>

<div class="panel panel-primary">
	<div class="panel-heading">
		<h2>
			Reviews
			@Html.ActionLink( "Create a New Review", "Create", null, new { @class = "btn btn-default" } )
		</h2>
	</div>
	<div class="panel-body">
		@if ( Model.Count() == 0 )
		{
			<p>You have no Reviews.</p>
		}

		<div class="row">
			@foreach ( var review in Model )
			{
				<div class="well col-md-4" id="Display-@review.RID">
					@Html.DisplayFor( Review => review, "Review" )
				</div>
			}
		</div>
	</div>
	<div class="panel-footer">
		<li>@Html.ActionLink( "Review Purchased Products", "Products", "Comments" )</li>
		<li>@Html.ActionLink( "Review Restaraunts", "Restaraunts", "Comments" )</li>
		<li>@Html.ActionLink( "Review Delivery Service", "Delivery", "Comments" )</li>
		<li>@Html.ActionLink( "Your Past Reviews", "Past", "Comments" )</li>
		<li>@Html.ActionLink( "Review Settings", "Settings", "Comments" )</li>
	</div>
</div>



