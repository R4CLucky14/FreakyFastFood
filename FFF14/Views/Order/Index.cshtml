@model IEnumerable<FFF.Models.OrderSystem.Order>

<div class="panel panel-primary">
	<div class="panel-heading">
		<h2>
			Orders
			@Html.ActionLink( "We should do something with this", "Create", null, new { @class = "btn btn-default" } )
		</h2>
	</div>
	<div class="panel-body">
		@if ( Model.Count() == 0 )
		{
			<p>You have no Recent Orders.</p>
		}
		<div>
			@foreach ( var order in Model )
			{
				<div class="well col-md-4" id="Display-@order.RID">
					@Html.DisplayFor( Order => order, "Order" )
				</div>
			}
		</div>
	</div>
	<div class="panel-footer">

	</div>
</div>
