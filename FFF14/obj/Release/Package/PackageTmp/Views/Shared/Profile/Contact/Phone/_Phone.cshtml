@model FFF.Models.ContactSystem.Phone
<tr>
	<td>
		<p class="form-control-static">@Html.DisplayForModel("Phone")</p>
	</td>
	<td>
		@using ( Html.BeginForm( "EditPhone", "Profile", new { id = Model.RID }, FormMethod.Post, new { @class="LoadModal" } ) )
		{
			@Html.AntiForgeryToken()
			<button class="btn btn-info" type="submit">
				<span class="glyphicon glyphicon-edit">
				</span>
				Edit
			</button>
		}
	</td>
	<td>
		@using ( Html.BeginForm( "DeletePhone", "Profile", new { id = Model.RID }, FormMethod.Post, new { @class="LoadModal" } ) )
		{
			@Html.AntiForgeryToken()
			<button class="btn btn-danger" type="submit">
				<span class="glyphicon glyphicon-remove">
				</span>
				Delete
			</button>
		}
	</td>
</tr>