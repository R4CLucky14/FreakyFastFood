@model FFF.Models.LocationSystem.Address

@if ( Model.Line2 != null )
{
	<address style="height:90px">
		<strong>@Html.DisplayFor( model => model.Nick )</strong><br>
		@Html.DisplayFor( model => model.Line1 )<br>
		@Html.DisplayFor( model => model.Line2 )<br>
		@Html.DisplayFor( model => model.City ), @Html.DisplayFor( model => model.State.Title ) @Html.DisplayFor( model => model.ZIP )
	</address>
}
else
{
	<address style="height:90px">
	<strong>@Html.DisplayFor( model => model.Nick )</strong><br>
	@Html.DisplayFor( model => model.Line1 )<br>
	@Html.DisplayFor( model => model.City ), @Html.DisplayFor( model => model.State.Title ) @Html.DisplayFor( model => model.ZIP )
</address>
}