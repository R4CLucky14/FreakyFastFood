@model IEnumerable<FFF.Models.PaymentSystem.PaymentMethod>


<div class="subcontainer" id="PaymentMethods">
	<div class="row">
		<div class="col-xs-6">
			<h2>Payment Methods</h2>
		</div>
		<div class="col-sm-6">
			<h2>
				@using ( Html.BeginForm( "Create", "PaymentMethod", FormMethod.Post, new { @class="LoadModal" } ) )
				{
					@Html.AntiForgeryToken()
					<button class="btn btn-success pull-right" type="submit">
						<span class="glyphicon glyphicon-plus-sign">
						</span>
						Add A New Payment Method
					</button>
				}
			</h2>
		</div>
	</div>
	@using ( Html.BeginForm( "Index", "PaymentMethod", FormMethod.Post, new { @class="refresher", @for="#PaymentMethodsContent" } ) )
	{
		@Html.AntiForgeryToken()
	}
	<div class="subcontent" id="PaymentMethodsContent">
		@{Html.RenderPartial( ViewBag.Path as String + "_PaymentMethods.cshtml" );}
	</div>
</div>